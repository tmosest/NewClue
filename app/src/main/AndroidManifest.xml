<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tmosest.newclue">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".NewGameActivity"
            android:label="@string/title_activity_new_game"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".SubmitNamesActivity"
            android:label="@string/title_activity_submit_names"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.tmosest.newclue.NewGameActivity" />
        </activity>
        <activity
            android:name=".SubmitGameInfo"
            android:label="@string/title_activity_submit_game_info"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.tmosest.newclue.SubmitNamesActivity" />
        </activity>
        <activity
            android:name=".NewWeaponsAndsPlaces"
            android:label="@string/title_activity_new_weapons_ands_places"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.tmosest.newclue.SubmitGameInfo" />
        </activity>
    </application>

</manifest>
